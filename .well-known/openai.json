{
    "openapi": "3.0.2",
    "info": {
        "title": "TianGong",
        "description": "For querying academic papers and professional documents with optional filters.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://plugin.tiangong.world"
        }
    ],
    "paths": {
        "/query": {
            "post": {
                "summary": "Query",
                "description": "Accepts search query objects array each with query and optional filters, in format: {\"queries\": [{\"query\":\"string\",\"filter\":{\"source\":\"string\",\"start_date\":\"string\",\"end_date\":\"string\"},\"top_k\":16}]}. Break down complex questions into sub-questions. Split queries if ResponseTooLargeError occurs.",
                "operationId": "query_main_query_post",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/QueryRequest"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/QueryResponseNeat"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "HTTPBearer": []
                    }
                ]
            }
        },
        "/lca-source-query": {
            "post": {
                "summary": "Query Source",
                "description": "Accepts query for searching LCA sources",
                "operationId": "query_source_lca_source_query_post",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/QueryLCASourceRequest"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/QueryLCASourceResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "HTTPBearer": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "DocumentChunkWithScoreNeat": {
                "properties": {
                    "text": {
                        "type": "string",
                        "title": "Text"
                    },
                    "source": {
                        "type": "string",
                        "title": "Source"
                    },
                    "score": {
                        "type": "number",
                        "title": "Score"
                    }
                },
                "type": "object",
                "required": [
                    "text",
                    "source",
                    "score"
                ],
                "title": "DocumentChunkWithScoreNeat"
            },
            "DocumentMetadataFilter": {
                "properties": {
                    "document_id": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Document Id"
                    },
                    "source": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Source"
                    },
                    "source_id": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Source Id"
                    },
                    "author": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Author"
                    },
                    "start_date": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Start Date"
                    },
                    "end_date": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "End Date"
                    }
                },
                "type": "object",
                "title": "DocumentMetadataFilter"
            },
            "HTTPValidationError": {
                "properties": {
                    "detail": {
                        "items": {
                            "$ref": "#/components/schemas/ValidationError"
                        },
                        "type": "array",
                        "title": "Detail"
                    }
                },
                "type": "object",
                "title": "HTTPValidationError"
            },
            "Query": {
                "properties": {
                    "query": {
                        "type": "string",
                        "title": "Query"
                    },
                    "filter": {
                        "anyOf": [
                            {
                                "$ref": "#/components/schemas/DocumentMetadataFilter"
                            },
                            {
                                "type": "null"
                            }
                        ]
                    },
                    "top_k": {
                        "anyOf": [
                            {
                                "type": "integer"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "title": "Top K",
                        "default": 16
                    }
                },
                "type": "object",
                "required": [
                    "query"
                ],
                "title": "Query"
            },
            "QueryLCASourceRequest": {
                "properties": {
