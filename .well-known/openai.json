                "title": "QueryRequest"
            },
            "QueryResponseNeat": {
                "properties": {
                    "results": {
                        "items": {
                            "$ref": "#/components/schemas/QueryResultNeat"
                        },
                        "type": "array",
                        "title": "Results"
                    }
                },
                "type": "object",
                "required": [
                    "results"
                ],
                "title": "QueryResponseNeat"
            },
            "QueryResultNeat": {
                "properties": {
                    "query": {
                        "type": "string",
