                    }
                },
                "type": "object",
                "required": [
                    "sources"
                ],
                "title": "QueryLCASourceResponse"
            },
            "QueryRequest": {
                "properties": {
                    "queries": {
                        "items": {
                            "$ref": "#/components/schemas/Query"
                        },
                        "type": "array",
                        "title": "Queries"
                    }
                },
                "type": "object",
                "required": [
                    "queries"
